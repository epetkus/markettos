<h1>Listing purchases</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Member</th>
      <th>Pay method</th>
      <th>Card number</th>
      <th>Quantity</th>
      <th>Sub total</th>
      <th>Discount</th>
      <th>Paid amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.user_id %></td>
        <td><%= purchase.member %></td>
        <td><%= purchase.pay_method %></td>
        <td><%= purchase.card_number %></td>
        <td><%= purchase.quantity %></td>
        <td><%= purchase.sub_total %></td>
        <td><%= purchase.discount %></td>
        <td><%= purchase.paid_amount %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

